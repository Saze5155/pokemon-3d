/**
 * Modern UI Design System - Pokemon 3D
 * Glassmorphism, animations fluides, UX moderne
 */

/* ==================== VARIABLES CSS ==================== */
:root {
  /* Couleurs principales */
  --primary: #6366f1;
  --primary-dark: #4f46e5;
  --primary-light: #818cf8;
  --secondary: #ec4899;
  --accent: #f59e0b;
  --success: #10b981;
  --danger: #ef4444;
  --warning: #f59e0b;

  /* Couleurs neutres */
  --bg-dark: #0f172a;
  --bg-darker: #020617;
  --bg-card: rgba(30, 41, 59, 0.8);
  --bg-glass: rgba(255, 255, 255, 0.05);
  --text-primary: #f8fafc;
  --text-secondary: #94a3b8;
  --text-muted: #64748b;

  /* Bordures et ombres */
  --border-subtle: rgba(255, 255, 255, 0.1);
  --border-accent: rgba(99, 102, 241, 0.5);
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
  --shadow-glow: 0 0 20px rgba(99, 102, 241, 0.3);

  /* Transitions */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.25s ease;
  --transition-slow: 0.4s cubic-bezier(0.4, 0, 0.2, 1);

  /* Rayons */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 24px;
  --radius-full: 9999px;
}

/* ==================== FONTS ==================== */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap');

/* ==================== RESET MODERNE ==================== */
.modern-ui * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.modern-ui {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  color: var(--text-primary);
  line-height: 1.5;
}

/* ==================== GLASS MORPHISM ==================== */
.glass {
  background: var(--bg-glass);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--border-subtle);
}

.glass-dark {
  background: rgba(15, 23, 42, 0.85);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border: 1px solid var(--border-subtle);
}

.glass-accent {
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(236, 72, 153, 0.1));
  backdrop-filter: blur(12px);
  border: 1px solid var(--border-accent);
}

/* ==================== DIALOGUE BOX MODERNE ==================== */
.modern-dialogue-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px;
  z-index: 1000;
  pointer-events: none;
}

.modern-dialogue-box {
  max-width: 800px;
  margin: 0 auto;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.9));
  backdrop-filter: blur(20px);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-xl);
  padding: 0;
  box-shadow: var(--shadow-lg), 0 0 40px rgba(99, 102, 241, 0.15);
  pointer-events: auto;
  overflow: hidden;
  animation: dialogueSlideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes dialogueSlideUp {
  from {
    opacity: 0;
    transform: translateY(30px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modern-dialogue-header {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 16px 20px;
  background: linear-gradient(90deg, rgba(99, 102, 241, 0.2), transparent);
  border-bottom: 1px solid var(--border-subtle);
}

.modern-dialogue-portrait {
  width: 56px;
  height: 56px;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  justify-content: center;
  color: white; /* Force white icon */
  box-shadow: var(--shadow-md), 0 0 20px rgba(99, 102, 241, 0.3);
  flex-shrink: 0;
}

.modern-dialogue-portrait .material-symbols-rounded {
  font-size: 32px;
}

.modern-dialogue-name {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.modern-dialogue-role {
  font-size: 11px;
  color: var(--primary-light);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.modern-dialogue-content {
  padding: 20px 24px;
  min-height: 80px;
}

.modern-dialogue-text {
  font-size: 16px;
  line-height: 1.7;
  color: var(--text-primary);
}

.modern-dialogue-text .highlight {
  color: var(--accent);
  font-weight: 600;
}

.modern-dialogue-footer {
  padding: 12px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid var(--border-subtle);
  background: rgba(0, 0, 0, 0.2);
}

.modern-dialogue-hint {
  font-size: 12px;
  color: var(--text-muted);
  display: flex;
  align-items: center;
  gap: 8px;
}

.modern-dialogue-hint kbd {
  background: rgba(255, 255, 255, 0.1);
  padding: 2px 8px;
  border-radius: 4px;
  font-family: 'JetBrains Mono', monospace;
  font-size: 11px;
}

.modern-dialogue-indicator {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary-light);
  animation: bounceIndicator 1s ease-in-out infinite;
}

@keyframes bounceIndicator {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4px); }
}

/* ==================== DIALOGUE CHOICES ==================== */
.modern-dialogue-choices {
  padding: 16px 24px 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.modern-choice-btn {
  width: 100%;
  padding: 14px 20px;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(99, 102, 241, 0.05));
  border: 1px solid rgba(99, 102, 241, 0.3);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-family: inherit;
  font-size: 14px;
  font-weight: 500;
  text-align: left;
  cursor: pointer;
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.modern-choice-btn::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 3px;
  background: var(--primary);
  transform: scaleY(0);
  transition: transform var(--transition-fast);
}

.modern-choice-btn:hover {
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.25), rgba(99, 102, 241, 0.1));
  border-color: var(--primary);
  transform: translateX(8px);
  box-shadow: var(--shadow-glow);
}

.modern-choice-btn:hover::before {
  transform: scaleY(1);
}

.modern-choice-btn.selected {
  background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  border-color: var(--primary);
  color: white;
}

/* ==================== TUTORIEL SYSTEM ==================== */
.tutorial-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.tutorial-container {
  width: 90%;
  max-width: 600px;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.98), rgba(30, 41, 59, 0.95));
  backdrop-filter: blur(20px);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg), 0 0 60px rgba(99, 102, 241, 0.2);
  overflow: hidden;
  animation: tutorialPopIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes tutorialPopIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(20px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.tutorial-header {
  padding: 20px 24px;
  background: linear-gradient(90deg, rgba(99, 102, 241, 0.3), rgba(236, 72, 153, 0.2));
  border-bottom: 1px solid var(--border-subtle);
  display: flex;
  align-items: center;
  gap: 16px;
}

.tutorial-icon {
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
}

.tutorial-title {
  font-size: 18px;
  font-weight: 700;
  color: var(--text-primary);
}

.tutorial-subtitle {
  font-size: 12px;
  color: var(--text-secondary);
  margin-top: 2px;
}

.tutorial-content {
  padding: 24px;
}

.tutorial-step {
  display: none;
  animation: stepFadeIn 0.4s ease;
}

.tutorial-step.active {
  display: block;
}

@keyframes stepFadeIn {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.tutorial-text {
  font-size: 15px;
  line-height: 1.8;
  color: var(--text-primary);
  margin-bottom: 20px;
}

.tutorial-highlight {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 4px 12px;
  background: rgba(99, 102, 241, 0.2);
  border: 1px solid rgba(99, 102, 241, 0.3);
  border-radius: var(--radius-full);
  color: var(--primary-light);
  font-weight: 500;
  font-size: 13px;
}

.tutorial-image {
  width: 100%;
  height: 200px;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16px 0;
  border: 1px solid var(--border-subtle);
  overflow: hidden;
}

.tutorial-tip {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 14px 16px;
  background: rgba(245, 158, 11, 0.1);
  border: 1px solid rgba(245, 158, 11, 0.3);
  border-radius: var(--radius-md);
  margin-top: 16px;
}

.tutorial-tip-icon {
  font-size: 20px;
  flex-shrink: 0;
}

.tutorial-tip-text {
  font-size: 13px;
  color: var(--accent);
  line-height: 1.6;
}

.tutorial-footer {
  padding: 16px 24px;
  background: rgba(0, 0, 0, 0.3);
  border-top: 1px solid var(--border-subtle);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tutorial-progress {
  display: flex;
  gap: 8px;
}

.tutorial-progress-dot {
  width: 8px;
  height: 8px;
  border-radius: var(--radius-full);
  background: var(--text-muted);
  transition: all var(--transition-normal);
}

.tutorial-progress-dot.active {
  background: var(--primary);
  box-shadow: 0 0 10px var(--primary);
}

.tutorial-progress-dot.completed {
  background: var(--success);
}

.tutorial-buttons {
  display: flex;
  gap: 12px;
}

/* ==================== BOUTONS MODERNES ==================== */
.modern-btn {
  padding: 12px 24px;
  border-radius: var(--radius-md);
  font-family: inherit;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-normal);
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.modern-btn-primary {
  background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  color: white;
  box-shadow: 0 4px 14px rgba(99, 102, 241, 0.4);
}

.modern-btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(99, 102, 241, 0.5);
}

.modern-btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
  border: 1px solid var(--border-subtle);
}

.modern-btn-secondary:hover {
  background: rgba(255, 255, 255, 0.15);
  border-color: var(--text-muted);
}

.modern-btn-success {
  background: linear-gradient(135deg, var(--success), #059669);
  color: white;
  box-shadow: 0 4px 14px rgba(16, 185, 129, 0.4);
}

.modern-btn-danger {
  background: linear-gradient(135deg, var(--danger), #dc2626);
  color: white;
  box-shadow: 0 4px 14px rgba(239, 68, 68, 0.4);
}

.modern-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
}

/* ==================== HUD MODERNE ==================== */
.modern-hud {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 100;
}

.modern-player-info {
  position: absolute;
  top: 20px;
  left: 20px;
  padding: 16px 20px;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.9), rgba(30, 41, 59, 0.85));
  backdrop-filter: blur(12px);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  min-width: 200px;
  pointer-events: auto;
}

.modern-player-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.modern-player-name::before {
  content: '';
  width: 8px;
  height: 8px;
  background: var(--success);
  border-radius: var(--radius-full);
  box-shadow: 0 0 8px var(--success);
}

.modern-player-money {
  font-size: 14px;
  color: var(--accent);
  font-weight: 600;
  font-family: 'JetBrains Mono', monospace;
}

/* ==================== POKEGEAR MODERNE ==================== */
.modern-pokegear {
  position: fixed;
  bottom: 20px;
  left: 20px;
  z-index: 200;
  pointer-events: auto;
}

.modern-pokegear-toggle {
  width: 56px;
  height: 56px;
  background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  border: none;
  border-radius: var(--radius-full);
  color: white;
  font-size: 24px;
  cursor: pointer;
  box-shadow: var(--shadow-lg), 0 0 20px rgba(99, 102, 241, 0.4);
  transition: all var(--transition-normal);
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 !important;
  margin: 0 !important;
}

.modern-pokegear-toggle .material-symbols-rounded {
  font-size: 28px; /* Slightly smaller to ensure it fits */
  line-height: normal; /* Reset line-height */
  display: block;
  margin: 0;
  padding: 0;
  width: auto;
  height: auto;
}

.modern-pokegear-toggle:hover {
  transform: scale(1.1);
  box-shadow: var(--shadow-lg), 0 0 30px rgba(99, 102, 241, 0.6);
}

.modern-pokegear-toggle.active {
  background: linear-gradient(135deg, var(--secondary), #db2777);
}

.modern-pokegear-menu {
  position: absolute;
  bottom: 70px;
  left: 0;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.98), rgba(30, 41, 59, 0.95));
  backdrop-filter: blur(20px);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-xl);
  padding: 16px;
  min-width: 220px;
  box-shadow: var(--shadow-lg);
  opacity: 0;
  visibility: hidden;
  transform: translateY(20px) scale(0.95);
  transition: all var(--transition-normal);
}

.modern-pokegear-menu.visible {
  opacity: 1;
  visibility: visible;
  transform: translateY(0) scale(1);
}

.modern-pokegear-time {
  text-align: center;
  padding: 12px;
  margin-bottom: 12px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-md);
  font-family: 'JetBrains Mono', monospace;
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
}

.modern-pokegear-buttons {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.modern-pokegear-btn {
  width: 100%;
  padding: 14px 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-family: inherit;
  font-size: 13px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-normal);
  display: flex;
  align-items: center;
  gap: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.modern-pokegear-btn:hover:not(.locked) {
  background: rgba(99, 102, 241, 0.2);
  border-color: var(--primary);
  transform: translateX(4px);
}

.modern-pokegear-btn.locked {
  opacity: 0.4;
  cursor: not-allowed;
}

.modern-pokegear-btn.locked::after {
  content: 'ðŸ”’';
  margin-left: auto;
  font-size: 12px;
}

.modern-pokegear-btn.save-btn {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.1));
  border-color: rgba(16, 185, 129, 0.4);
  color: var(--success);
}

.modern-pokegear-btn.save-btn:hover {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.3), rgba(16, 185, 129, 0.2));
}

.pokegear-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

/* ==================== COMBAT UI MODERNE ==================== */
.modern-combat-ui {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 500;
}

.modern-combat-container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 20px;
}

.modern-combat-dialogue {
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.9));
  backdrop-filter: blur(16px);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  padding: 16px 24px;
  margin-bottom: -1px;
}

.modern-combat-dialogue-text {
  font-size: 15px;
  color: var(--text-primary);
  line-height: 1.6;
}

.modern-combat-menu {
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.98), rgba(30, 41, 59, 0.95));
  backdrop-filter: blur(20px);
  border: 1px solid var(--border-subtle);
  border-radius: 0 0 var(--radius-xl) var(--radius-xl);
  padding: 20px;
}

.modern-combat-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.modern-combat-btn {
  padding: 18px 24px;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(99, 102, 241, 0.05));
  border: 1px solid rgba(99, 102, 241, 0.3);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-family: inherit;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-normal);
  display: flex;
  align-items: center;
  gap: 12px;
  text-transform: uppercase;
}

.modern-combat-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.3), rgba(99, 102, 241, 0.15));
  border-color: var(--primary);
  transform: scale(1.02);
  box-shadow: var(--shadow-glow);
}

.modern-combat-btn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.modern-combat-btn.attack {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(239, 68, 68, 0.1));
  border-color: rgba(239, 68, 68, 0.4);
}

.modern-combat-btn.attack:hover {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.3), rgba(239, 68, 68, 0.2));
  border-color: var(--danger);
}

.combat-btn-icon {
  font-size: 20px;
}

/* Moves Grid */
.modern-moves-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.modern-move-btn {
  padding: 14px 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-family: inherit;
  font-size: 13px;
  cursor: pointer;
  transition: all var(--transition-normal);
  text-align: left;
}

.modern-move-btn:hover {
  background: rgba(99, 102, 241, 0.2);
  border-color: var(--primary);
}

.modern-move-name {
  font-weight: 600;
  margin-bottom: 4px;
}

.modern-move-info {
  font-size: 11px;
  color: var(--text-secondary);
  display: flex;
  justify-content: space-between;
}

/* Type colors */
.type-normal { color: #a8a878; }
.type-fire { color: #f08030; }
.type-water { color: #6890f0; }
.type-grass { color: #78c850; }
.type-electric { color: #f8d030; }
.type-ice { color: #98d8d8; }
.type-fighting { color: #c03028; }
.type-poison { color: #a040a0; }
.type-ground { color: #e0c068; }
.type-flying { color: #a890f0; }
.type-psychic { color: #f85888; }
.type-bug { color: #a8b820; }
.type-rock { color: #b8a038; }
.type-ghost { color: #705898; }
.type-dragon { color: #7038f8; }

/* ==================== HP BARS MODERNES ==================== */
.modern-hp-container {
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-full);
  padding: 3px;
  overflow: hidden;
}

.modern-hp-bar {
  height: 12px;
  border-radius: var(--radius-full);
  background: linear-gradient(90deg, var(--success), #34d399);
  transition: width 0.5s ease, background 0.3s ease;
  position: relative;
  overflow: hidden;
}

.modern-hp-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,0.3), transparent);
  border-radius: var(--radius-full) var(--radius-full) 0 0;
}

.modern-hp-bar.low {
  background: linear-gradient(90deg, var(--warning), #fbbf24);
}

.modern-hp-bar.critical {
  background: linear-gradient(90deg, var(--danger), #f87171);
  animation: hpPulse 0.5s ease-in-out infinite;
}

@keyframes hpPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}


  letter-spacing: 2px;
}

.modern-menu-title {
  font-size: 32px;
  display: flex;
  align-items: center;
  gap: 15px;
  text-shadow: 2px 2px 0 #000;
}

.modern-close-btn {
  background: transparent;
  border: none;
  color: var(--text-muted);
  cursor: pointer;
  padding: 5px;
  transition: color 0.2s;
}
.modern-close-btn span {
    font-size: 32px;
}
.modern-close-btn:hover {
  color: var(--text-primary);
}


/* =========================================
   THÃˆMES DE COULEUR (Bordures & Accents)
   ========================================= */

/* --- THÃˆME BLEU (Ã‰QUIPE) --- */
.modern-menu-container.theme-blue {
    border-color: var(--theme-blue);
    box-shadow: 0 0 15px rgba(0, 168, 255, 0.4);
}
.theme-blue .modern-menu-header {
    background: linear-gradient(90deg, rgba(0, 168, 255, 0.2), transparent);
    border-bottom-color: var(--theme-blue);
}
.theme-blue .modern-menu-title {
    color: var(--theme-blue);
}
.theme-blue .modern-close-btn:hover { color: var(--theme-blue); }

/* --- THÃˆME JAUNE (SAC) --- */
.modern-menu-container.theme-yellow {
    border-color: var(--theme-yellow);
    box-shadow: 0 0 15px rgba(251, 197, 49, 0.4);
}
.theme-yellow .modern-menu-header {
    background: linear-gradient(90deg, rgba(251, 197, 49, 0.2), transparent);
    border-bottom-color: var(--theme-yellow);
}
.theme-yellow .modern-menu-title {
    color: var(--theme-yellow);
}
.theme-yellow .modern-close-btn:hover { color: var(--theme-yellow); }

/* --- THÃˆME VERT (OPTIONS) --- */
.modern-menu-container.theme-green {
    border-color: var(--theme-green);
    box-shadow: 0 0 15px rgba(76, 209, 55, 0.4);
}
.theme-green .modern-menu-header {
    background: linear-gradient(90deg, rgba(76, 209, 55, 0.2), transparent);
    border-bottom-color: var(--theme-green);
}
.theme-green .modern-menu-title {
    color: var(--theme-green);
}
.theme-green .modern-close-btn:hover { color: var(--theme-green); }

/* --- THÃˆME ROUGE (COMBAT / DEX) --- */
.modern-menu-container.theme-red {
    border-color: var(--theme-red);
    box-shadow: 0 0 15px rgba(232, 65, 24, 0.4);
}
.theme-red .modern-menu-header {
    background: linear-gradient(90deg, rgba(232, 65, 24, 0.2), transparent);
    border-bottom-color: var(--theme-red);
}


/* =========================================
   COMPOSANTS RÃ‰UTILISABLES
   ========================================= */

/* Boutons "Retro" */
.modern-btn {
  font-family: 'VT323', monospace;
  font-size: 22px;
  padding: 8px 20px;
  border: 2px solid var(--text-muted);
  background: rgba(0,0,0,0.4);
  color: var(--text-primary);
  cursor: pointer;
  text-transform: uppercase;
  transition: all 0.1s;
  box-shadow: 2px 2px 0 #000; /* Ombre dure */
}

.modern-btn:hover {
  background: rgba(255,255,255,0.1);
  border-color: var(--text-primary);
}

.modern-btn:active {
    transform: translate(2px, 2px);
    box-shadow: none;
}

.modern-btn-primary {
    border-color: var(--theme-blue);
    color: var(--theme-blue);
}
.modern-btn-primary:hover {
    background: var(--theme-blue);
    color: #000;
}

.modern-btn-secondary {
    border-color: var(--text-secondary);
}

/* Cartes et panneaux (Glassmorphism remplacÃ© par Panel solide) */
.glass, .glass-dark {
    background: var(--bg-panel);
    border: 1px solid var(--text-muted);
    box-shadow: 4px 4px 0 rgba(0,0,0,0.5); 
    backdrop-filter: none; /* Pas de flou, style net */
    border-radius: 0; /* Angles droits */
}

/* Sidebar Layout */
.modern-bag-layout {
    display: flex;
    height: 100%;
}
.modern-bag-sidebar {
    width: 250px;
    display: flex;
    flex-direction: column;
}
.bag-category-btn {
    padding: 15px;
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--text-muted);
    color: var(--text-muted);
    font-family: 'VT323', monospace;
    font-size: 24px;
    text-align: left;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
}
.bag-category-btn:hover {
    background: rgba(255,255,255,0.05);
    color: var(--text-primary);
}
.bag-category-btn.active {
    background: var(--theme-yellow);
    color: #000;
}

.modern-bag-content {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
}
.modern-bag-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 15px;
}

/* Bag Item Card */
.bag-item-card {
    background: rgba(0,0,0,0.3);
    border: 1px solid var(--text-muted);
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
}
.bag-item-card:hover {
    border-color: var(--theme-yellow);
    background: rgba(255,255,255,0.05);
}
.bag-item-card.selected {
    border-color: var(--theme-yellow);
    box-shadow: 0 0 10px rgba(251, 197, 49, 0.3);
}
.bag-item-icon {
    width: 48px;
    height: 48px;
    image-rendering: pixelated;
}


/* Animations simples */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Scrollbar retro */
::-webkit-scrollbar {
  width: 12px;
  background: #000;
}
::-webkit-scrollbar-thumb {
  background: var(--text-muted);
  border: 2px solid #000;
}
::-webkit-scrollbar-thumb:hover {
  background: var(--text-primary);
}

/* ==================== TUTORIAL OVERLAY (RETRO) ==================== */
.tutorial-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.9) !important;
}

.tutorial-container {
  width: 600px;
  background-color: var(--bg-dark);
  background-image: 
    linear-gradient(var(--grid-color) 1px, transparent 1px),
    linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
  background-size: var(--grid-size) var(--grid-size);
  
  border: 2px solid var(--theme-blue);
  box-shadow: 0 0 0 4px #000, 0 0 20px var(--theme-blue);
  
  padding: 0;
  overflow: hidden;
  animation: tutorialPopIn 0.3s steps(5);
}

@keyframes tutorialPopIn {
  from { opacity: 0; transform: scale(0.5); }
  to { opacity: 1; transform: scale(1); }
}

.tutorial-header {
  background: var(--theme-blue);
  padding: 10px 20px;
  display: flex;
  align-items: center;
  gap: 20px;
  border-bottom: 4px solid #000;
}

.tutorial-icon {
  width: 40px;
  height: 40px;
  background: #fff;
  border: 2px solid #000;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
}

.tutorial-title {
  font-size: 28px;
  color: #000;
  text-transform: uppercase;
}

.tutorial-content {
  padding: 20px;
  background: rgba(0,0,0,0.8);
}

.tutorial-text {
  font-size: 22px;
  line-height: 1.4;
  color: #fff;
}

.tutorial-highlight {
  color: var(--theme-yellow);
  text-decoration: underline;
}

.tutorial-footer {
  padding: 15px;
  background: #000;
  border-top: 2px solid var(--text-muted);
  display: flex;
  justify-content: space-between;
}

.tutorial-progress-dot {
  width: 12px;
  height: 12px;
  background: #333;
  border: 1px solid #fff;
}
.tutorial-progress-dot.active {
  background: var(--theme-blue);
}

/* ==================== HUD NOTIFICATIONS ==================== */
.notification-container {
    position: fixed;
    top: 20px;
    right: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 9999;
}

.hud-notification {
    background: #000;
    border: 2px solid var(--text-primary);
    padding: 10px 20px;
    min-width: 300px;
    display: flex;
    align-items: center;
    gap: 15px;
    box-shadow: 4px 4px 0 rgba(0,0,0,0.5);
    font-family: 'VT323', monospace;
    color: #fff;
    
    transform: translateX(100%);
    opacity: 0;
    transition: all 0.2s steps(5);
}

.hud-notification.visible {
    transform: translateX(0);
    opacity: 1;
}

.hud-notification.success { border-color: var(--theme-green); color: var(--theme-green); }
.hud-notification.info { border-color: var(--theme-blue); color: var(--theme-blue); }
.hud-notification.warning { border-color: var(--theme-yellow); color: var(--theme-yellow); }
.hud-notification.error { border-color: var(--theme-red); color: var(--theme-red); }
